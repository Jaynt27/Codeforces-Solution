#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        long long n;
        cin>>n;
        long long arr[n];
        for(int i=0;i<n;i++){
            cin>>arr[i];
        }
        long long ops=1;
        long long lastPicked=arr[0];
        for(int i=1;i<n;i++){
            if(lastPicked+1<arr[i]){
                lastPicked=arr[i];
                ops++;
            }
        }
        cout<<ops<<endl;
    }
    return 0;
}
